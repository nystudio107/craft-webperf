{# -- Frontend -- #}
<div class="pane first">
    <h1 class="text-center text-base text-3xl font-bold">{{ "Browser Performance"|t("webperf") }}</h1>
    <div class="w-full flex-item-row items-start">
        <div class="flex-row three-up-sm-grid-item self-top">
            <div class="webperf-tooltip">
                <span class="webperf-tooltiptext">
                    {{ "The time it takes for the webpage to be fully loaded in the client's browser."|t("webperf") }}
                    <span class="field inline-block m-0">
                        <a href="https://developers.google.com/web/fundamentals/performance/speed-tools/"
                           target="_blank"
                           class="webperf-tooltip-link notice go"
                        >{{ "Learn More"|t("webperf") }}</a>
                    </span>
                </span>
                <dashboard-radial-bar-chart
                        title="Page Loaded"
                        start="{{ start }}"
                        end="{{ end }}"
                        column="pageLoad"
                        fast-color="{{ settings.dashboardFastColor }}"
                        average-color="{{ settings.dashboardAverageColor }}"
                        slow-color="{{ settings.dashboardSlowColor }}"
                        :max-value="10"
                        :site-id="{{ currentSiteId }}"
                    >
                </dashboard-radial-bar-chart>
            </div>
        </div>
        <div class="flex-row three-up-grid-item self-top">
            <div class="">
                <div class="webperf-tooltip">
                    <span class="webperf-tooltiptext">
                        {{  "When the browser first begins to nominally paint content into the browser."|t("webperf") }}
                        <span class="field inline-block m-0">
                            <a href="https://developers.google.com/web/tools/lighthouse/audits/first-meaningful-paint"
                               target="_blank"
                               class="webperf-tooltip-link notice go"
                            >{{ "Learn More"|t("webperf") }}</a>
                        </span>
                    </span>
                    <dashboard-simple-bar-chart
                            title="First Paint"
                            start="{{ start }}"
                            end="{{ end }}"
                            column="firstPaint"
                            fast-color="{{ settings.dashboardFastColor }}"
                            average-color="{{ settings.dashboardAverageColor }}"
                            slow-color="{{ settings.dashboardSlowColor }}"
                            :max-value="5"
                            :site-id="{{ currentSiteId }}"
                    >
                    </dashboard-simple-bar-chart>
                </div>
                <div class="webperf-tooltip">
                    <span class="webperf-tooltiptext">
                        {{ "The first meaningful content that the client sees 'painted' in their browser."|t("webperf") }}
                        <span class="field inline-block m-0">
                            <a href="https://developers.google.com/web/tools/lighthouse/audits/first-contentful-paint"
                               target="_blank"
                               class="webperf-tooltip-link notice go"
                            >{{ "Learn More"|t("webperf") }}</a>
                        </span>
                    </span>
                    <dashboard-simple-bar-chart
                            title="First Contentful Paint"
                            start="{{ start }}"
                            end="{{ end }}"
                            column="firstContentfulPaint"
                            fast-color="{{ settings.dashboardFastColor }}"
                            average-color="{{ settings.dashboardAverageColor }}"
                            slow-color="{{ settings.dashboardSlowColor }}"
                            :max-value="5"
                            :site-id="{{ currentSiteId }}"
                    >
                    </dashboard-simple-bar-chart>
                </div>
                <div class="webperf-tooltip">
                    <span class="webperf-tooltiptext">
                        {{ "How long it takes before the user can interact with elements on the page."|t("webperf") }}
                        <span class="field inline-block m-0">
                            <a href="https://developers.google.com/web/tools/lighthouse/audits/time-to-interactive"
                               target="_blank"
                               class="webperf-tooltip-link notice go"
                            >{{ "Learn More"|t("webperf") }}</a>
                        </span>
                    </span>
                    <dashboard-simple-bar-chart
                        title="DOM Interactive"
                        start="{{ start }}"
                        end="{{ end }}"
                        column="domInteractive"
                        fast-color="{{ settings.dashboardFastColor }}"
                        average-color="{{ settings.dashboardAverageColor }}"
                        slow-color="{{ settings.dashboardSlowColor }}"
                        :max-value="5"
                        :site-id="{{ currentSiteId }}"
                    >
                    </dashboard-simple-bar-chart>
                </div>
            </div>
        </div>
        <div class="flex-row three-up-grid-item self-top">
            <dashboard-file-list
                    start="{{ start }}"
                    end="{{ end }}"
                    column="pageLoad"
                    :limit="3"
                    fast-color="{{ settings.dashboardFastColor }}"
                    average-color="{{ settings.dashboardAverageColor }}"
                    slow-color="{{ settings.dashboardSlowColor }}"
                    :max-value="10"
                    :site-id="{{ currentSiteId }}"
            >
            </dashboard-file-list>
        </div>
    </div>
    {% set devModeWarning = 'false' %}
    <div class="px-8">
        <sample-pane-footer
                start="{{ start }}"
                end="{{ end }}"
                subject="charts"
                column="pageLoad"
                :site-id="{{ currentSiteId }}"
                :display-dev-mode-warning="{{ devModeWarning }}"
        >
        </sample-pane-footer>
    </div>
</div>
