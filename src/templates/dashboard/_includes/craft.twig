* @copyright Copyright (c) 2019 nystudio107
*/
#}

{# -- Craft -- #}
<div class="pane">
    <h1 class="text-center text-base text-4xl font-bold">Craft Profile</h1>
    <div class="w-full flex-item-row items-start">
        <div class="flex-row three-up-sm-grid-item self-top">
            <div class="webperf-tooltip">
                <span class="webperf-tooltiptext">
                    The total amount of time it takes Craft to process the webpages.
                    <a href="https://nystudio107.com/blog/profiling-your-website-with-craft-cms-3s-debug-toolbar"
                       target="_blank"
                       class="text-grey-lighter hover:text-grey-lightest"
                    >Learn More &rarr;</a>
                </span>
                <dashboard-radial-bar-chart
                        title="Craft Execution"
                        start="{{ start }}"
                        end="{{ end }}"
                        column="craftTotalMs"
                        fast-color="{{ settings.dashboardFastColor }}"
                        average-color="{{ settings.dashboardAverageColor }}"
                        slow-color="{{ settings.dashboardSlowColor }}"
                        :max-value="2"
                        :site-id="{{ currentSiteId }}"
                >
                </dashboard-radial-bar-chart>
            </div>
        </div>
        <div class="flex-row three-up-grid-item self-top">
            <div class="">
                <div class="webperf-tooltip">
                    <span class="webperf-tooltiptext">
                        How long it takes to execute the database queries for the webpages.
                        <a href="https://nystudio107.com/blog/profiling-your-website-with-craft-cms-3s-debug-toolbar"
                           target="_blank"
                           class="text-grey-lighter hover:text-grey-lightest"
                        >Learn More &rarr;</a>
                    </span>
                    <dashboard-simple-bar-chart
                            title="Database Queries"
                            start="{{ start }}"
                            end="{{ end }}"
                            column="craftDbMs"
                            fast-color="{{ settings.dashboardFastColor }}"
                            average-color="{{ settings.dashboardAverageColor }}"
                            slow-color="{{ settings.dashboardSlowColor }}"
                            :max-value="2"
                            :site-id="{{ currentSiteId }}"
                    >
                    </dashboard-simple-bar-chart>
                </div>
                <div class="webperf-tooltip">
                    <span class="webperf-tooltiptext">
                        How long it takes Twig to render the templates for the webpages.
                        <a href="https://nystudio107.com/blog/profiling-your-website-with-craft-cms-3s-debug-toolbar"
                           target="_blank"
                           class="text-grey-lighter hover:text-grey-lightest"
                        >Learn More &rarr;</a>
                    </span>
                    <dashboard-simple-bar-chart
                            title="Twig Rendering"
                            start="{{ start }}"
                            end="{{ end }}"
                            column="craftTwigMs"
                            fast-color="{{ settings.dashboardFastColor }}"
                            average-color="{{ settings.dashboardAverageColor }}"
                            slow-color="{{ settings.dashboardSlowColor }}"
                            :max-value="2"
                            :site-id="{{ currentSiteId }}"
                    >
                    </dashboard-simple-bar-chart>
                </div>
                <div class="webperf-tooltip">
                    <span class="webperf-tooltiptext">
                        Other profiled code (such as from plugins) in order to process the webpages.
                        <a href="https://developers.google.com/web/tools/chrome-devtools/network-performance/understanding-resource-timing"
                           target="_blank"
                           class="text-grey-lighter hover:text-grey-lightest"
                        >Learn More &rarr;</a>
                    </span>
                    <dashboard-simple-bar-chart
                            title="Other"
                            start="{{ start }}"
                            end="{{ end }}"
                            column="craftOtherMs"
                            fast-color="{{ settings.dashboardFastColor }}"
                            average-color="{{ settings.dashboardAverageColor }}"
                            slow-color="{{ settings.dashboardSlowColor }}"
                            :max-value="2"
                            :site-id="{{ currentSiteId }}"
                    >
                    </dashboard-simple-bar-chart>
                </div>
            </div>
        </div>
        <div class="flex-row three-up-grid-item self-top">
            <dashboard-file-list
                    start="{{ start }}"
                    end="{{ end }}"
                    column="craftTotalMs"
                    fast-color="{{ settings.dashboardFastColor }}"
                    average-color="{{ settings.dashboardAverageColor }}"
                    slow-color="{{ settings.dashboardSlowColor }}"
                    :limit="3"
                    :max-value="2"
                    :site-id="{{ currentSiteId }}"
            >
            </dashboard-file-list>
        </div>
    </div>
    {% set devModeWarning = craft.app.config.general.devMode ? 'true' : 'false' %}
    <div class="px-8">
        <sample-pane-footer
                start="{{ start }}"
                end="{{ end }}"
                column="craftTotalMs"
                :site-id="{{ currentSiteId }}"
                :display-dev-mode-warning="{{ devModeWarning }}"
        >
        </sample-pane-footer>
    </div>
</div>
